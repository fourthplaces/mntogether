# Development Dockerfile for Next.js with hot-reload
FROM node:22-alpine

WORKDIR /app

# Install dependencies globally for faster startup
RUN corepack enable && corepack prepare yarn@4.1.0 --activate

# Copy workspace root files
COPY package.json yarn.lock .yarnrc.yml ./

# Copy shared package
COPY packages/shared ./packages/shared

# Copy app package
COPY packages/web-app/package.json ./packages/web-app/

# Install dependencies
RUN yarn install

# Expose Next.js dev server port
EXPOSE 3001

# Set environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3001
ENV HOSTNAME="0.0.0.0"

WORKDIR /app/packages/web-app

# Start dev server with hot-reload
CMD ["yarn", "dev"]
